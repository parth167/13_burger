<div class="jumbotron">
    <h1 class="text-center">Burgers! 🍔</h1>
    <hr class="my-4">
</div>

<div class="container">
    <div class="row">
        <div class="container col-md-6">
            <h2 class="text-center">Devoured Burgers</h2>
            <ul>
                {{#each burger_name}}
                {{#if devoured}}
                <li class="list-group-item">{{burger_name}}</li>
                {{/if}}
                {{/each}}

            </ul>
        </div>
        <div class="container col-md-6">
            <h2 class="text-center">Burgers to devour!</h2>
            <ul>
                {{#each burger_name}}

                {{#unless devoured}}
                {{> burgers/burger-devoured devoured=true}}
                {{/unless}}
                {{/each}}

            </ul>
        </div>

    </div>
</div>
<div class="container">
    <h2 class="text-center">Add a burger!</h2>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form class="create-form ">
                    <label for="newBurger">Burger Name 🍔 </label>
                    <input type="text" id="newBurger" name="name" class="form-control">

                    <button type="submit" class="btn btn-primary mt-2">Add Burger!</button>
                </form>
            </div>


        </div>
    </div>

</div>